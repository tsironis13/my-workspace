{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@business-portal/env": [
        "projects/business-portal/src/environments/environment.ts"
      ],
      "@business-portal/backend": [
        "libs/backend/business-portal/src/public-api.ts"
      ],
      "@business-portal/frontend": [
        "libs/frontend/business-portal/src/public-api.ts"
      ],
      "@business-portal/core/config/token": [
        "projects/business-portal/src/app/core/config/core.config.tokens.ts"
      ],
      "@business-portal/core/auth": [
        "projects/business-portal/src/app/core/auth/public-api.ts"
      ],
      "@business-portal/core/utils": [
        "projects/business-portal/src/app/core/utils/public-api.ts"
      ],
      "@business-portal/ui": [
        "projects/business-portal/src/app/ui/public-api.ts"
      ],
      "@business-portal/pattern": [
        "projects/business-portal/src/app/pattern/public-api.ts"
      ],
      "@business-portal/core/entities/application": [
        "projects/business-portal/src/app/core/entities/application/public-api.ts"
      ],
      "@business-portal/core/entities/infrastructure": [
        "projects/business-portal/src/app/core/entities/infrastructure/public-api.ts"
      ],
      "@business-portal/administration/user-management/domain": [
        "projects/business-portal/src/app/feature/administration/user-management-subfeature/domain/public-api.ts"
      ],
      "@business-portal/administration/user-assignments/domain": [
        "projects/business-portal/src/app/feature/administration/user-assignments-subfeature/domain/public-api.ts"
      ],
      "@shared/auth": ["libs/shared/auth/src/public-api.ts"],
      "@shared/forms": ["libs/shared/forms/src/public-api.ts"],
      "@shared/global-loader": ["libs/shared/global-loader/src/public-api.ts"],
      "@shared/toast": ["libs/shared/toast/src/public-api.ts"]
    },
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
